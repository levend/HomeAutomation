extends basic_layout

block masterContent
  .container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Please Sign In
          .panel-body
            form(role='form',method='POST')
              fieldset
                .form-group
                  input.form-control(placeholder='Username', name='username', type='text', autofocus='')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                // Change this to a button or input when using this as a form
                button.btn.btn-lg.btn-success.btn-block(href='index.html') Login
